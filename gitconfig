[color]
	ui = auto
[core]
	editor = subl -n -w
	autocrlf = input
	safecrlf = false
[push]
	default = upstream
[user]
	email = <your_email_here>
	name = <your_name_here>
[credential]
	helper = cache --timeout=3600
[credentail]
	helper = cache
[difftool "kdiff3"]
    path = /usr/local/bin/kdiff3
    trustExitCode = false
[difftool]
    prompt = false
[diff]
    tool = kdiff3
[mergetool "kdiff3"]
    path = /usr/local/bin/kdiff3
    trustExitCode = false
[mergetool]
    keepBackup = false
[merge]
    tool = kdiff3 
[alias]
  co = checkout
  st = status
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
# --pretty = "..." defines the format of the output.
# %h is the abbreviated has of the commit
# %d are any decorations on that commit[e.g. branch or tags]
# %ad is author date
# %s is the comment
# %an is the author name
# --graph informs git to display the commit tree in ASCII graph layout
# --date=short keeps the date format nice and short
